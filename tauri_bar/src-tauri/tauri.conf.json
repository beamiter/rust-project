{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "tauri_bar",
  "version": "0.1.0",
  "identifier": "com.mm.tauri.bar",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "enableGTKAppId": true,
    "windows": [
      {
        "title": "tauri_bar",
        "width": 1920,
        "height": 50,
        "decorations": false,
        "alwaysOnTop": true,
        "resizable": true,
        "maximizable": false,
        "minimizable": false,
        "visible": true,
        "skipTaskbar": true,
        "x": 0,
        "y": 0,
        "label": "main"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "deb"
  }
}
