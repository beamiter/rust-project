{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "tauri_bar",
  "version": "0.1.0",
  "identifier": "com.mm.tauri.bar",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "enableGTKAppId": true,
    "windows": [
      {
        "title": "tauri_bar",
        "width": 1920,
        "height": 50,
        "decorations": false,
        "alwaysOnTop": false,
        "resizable": true,
        "maximizable": false,
        "minimizable": false,
        "visible": true,
        "skipTaskbar": true,
        "x": 0,
        "y": 0,
        "label": "main"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "linux": {
      "appimage": {
        "bundleMediaFramework": true,
        "files": {}
      },
      "deb": {
        "files": {}
      },
      "rpm": {
        "epoch": 0,
        "files": {},
        "release": "1"
      }
    },
    "targets": "appimage"
  }
}
